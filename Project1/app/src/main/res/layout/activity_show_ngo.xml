<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vishal.project1.show_ngo">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ngo"
                android:scaleType="fitXY"
                android:id="@+id/ngologo"
                android:background="#000000"
                android:padding="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NGO name"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:id="@+id/ngoname"
                android:fontFamily="sans-serif-medium"
                android:textSize="29dp"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website of NGO:"
                android:textSize="16dp"
                android:id="@+id/website"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/blueshade"
                android:layout_marginTop="1dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact No.:"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000000000"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/contact"
                        android:textSize="14sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/black"></LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description of NGO:"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginTop="9dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descriiption"
                android:textSize="16dp"
                android:paddingLeft="25dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/description"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email ID:"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginTop="9dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email address"
                android:textSize="16dp"
                android:paddingLeft="25dp"
                android:id="@+id/email"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginTop="9dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="address"
                android:textSize="16dp"
                android:paddingLeft="25dp"
                android:id="@+id/address"
                android:textColor="@color/deepskyblue"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Want to Donate ? Click Here..."
                android:textSize="18dp"
                android:id="@+id/charity"
                android:textColor="@color/colorPrimary"
                android:linksClickable="true"
                android:textStyle="italic"
                android:layout_marginTop="9dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Events"
                android:textSize="18dp"
                android:id="@+id/ngo_events"
                android:textColor="@color/colorPrimary"
                android:linksClickable="true"
                android:textStyle="italic"
                android:layout_marginTop="9dp"
                />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
